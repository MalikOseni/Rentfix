# ============================================================================
# Rentfix Environment Configuration
#
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# ============================================================================

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=development
PORT=4000
LOG_LEVEL=info
API_VERSION=v1

# ============================================================================
# Database Configuration (REQUIRED)
# ============================================================================
DATABASE_URL=postgresql://rentfix:password@localhost:5432/rentfix
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=rentfix
DATABASE_PASSWORD=changeme
DATABASE_NAME=rentfix
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================================================
# Redis Configuration (REQUIRED)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# ============================================================================
# Authentication & Security (REQUIRED)
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-changeme
JWT_EXPIRATION=1h
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-min-32-characters-changeme
REFRESH_TOKEN_EXPIRATION=7d
BCRYPT_ROUNDS=12

# ============================================================================
# AI Service Configuration (REQUIRED for production)
# ============================================================================
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4-vision-preview
AI_CLASSIFICATION_ENABLED=true

# ============================================================================
# Cloud Storage Configuration (REQUIRED for production)
# ============================================================================
S3_BUCKET=rentfix-media
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-aws-access-key
S3_SECRET_ACCESS_KEY=your-aws-secret-key

# ============================================================================
# Email & Notifications (REQUIRED for production)
# ============================================================================
# SendGrid (Email)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@rentfix.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+15551234567

# Firebase Cloud Messaging (Push Notifications)
FCM_SERVER_KEY=your-fcm-server-key

# ============================================================================
# Payment Processing (REQUIRED for production)
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================================================
# Monitoring & Observability
# ============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Datadog (APM & Monitoring)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# ============================================================================
# CORS & Security
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:19006
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# ============================================================================
# Test Environment Variables (for E2E tests)
# ============================================================================
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=postgres
TEST_DB_PASSWORD=postgres
TEST_DB_NAME=rentfix_e2e_test
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6379
