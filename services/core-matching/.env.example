# Core Matching Service - Enterprise Configuration

# Service
NODE_ENV=development
PORT=4400

# PostgreSQL + PostGIS
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=rentfix
DB_POOL_MIN=5
DB_POOL_MAX=20

# Redis (Cache + Rate Limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security & Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MATCHING_MAX=20
CORS_ORIGIN=http://localhost:3000

# Performance
CACHE_CONTRACTOR_TTL=3600
CACHE_SEARCH_TTL=300
DEFAULT_SEARCH_RADIUS_MILES=5
DEFAULT_MAX_RESULTS=10

# Monitoring
METRICS_ENABLED=true
LOG_LEVEL=debug

# Testing
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=postgres
TEST_DB_PASSWORD=postgres
TEST_DB_NAME=rentfix_test
